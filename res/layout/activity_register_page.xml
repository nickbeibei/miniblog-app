<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.netease.myBlog.page.RegisterPage" >

    <TextView
        android:id="@+id/nickname_Text"
        android:layout_width="245dp"
        android:layout_height="25dp"
        android:layout_below="@+id/nickname_editText"
        android:layout_centerHorizontal="true"
        android:text="2-12个字符"
        android:textColor="@color/gray_dark"
        android:textSize="12dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/nickname_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/account_editText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/common_edittext_shape"
        android:ems="10"
        android:hint="账号"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/account_Text"
        android:layout_width="245dp"
        android:layout_height="25dp"
        android:layout_below="@+id/account_editText"
        android:layout_centerHorizontal="true"
        android:text="请输入账号"
        android:textColor="@color/gray_dark"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/account_editText"
        android:layout_below="@+id/account_Text"
        android:background="@drawable/common_edittext_shape"
        android:ems="10"
        android:hint="设置密码"
        android:inputType="textPassword"
        android:textSize="15dp" >
    </EditText>

    <TextView
        android:id="@+id/password_Text1"
        android:layout_width="245dp"
        android:layout_height="25dp"
        android:layout_below="@+id/password_editText"
        android:layout_centerHorizontal="true"
        android:text="6-12数字或者字母"
        android:textColor="@color/gray_dark"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/password_Text2"
        android:layout_width="245dp"
        android:layout_height="25dp"
        android:layout_below="@+id/password_editText2"
        android:layout_centerHorizontal="true"
        android:text="请再次确认密码"
        android:textColor="@color/gray_dark"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/nickname_editText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/password_editText2"
        android:layout_below="@+id/password_Text2"
        android:background="@drawable/common_edittext_shape"
        android:ems="10"
        android:hint="昵称"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/password_editText2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/password_editText"
        android:layout_below="@+id/password_Text1"
        android:background="@drawable/common_edittext_shape"
        android:ems="10"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:textSize="15dp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/signin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@color/gray_light"
        android:text="已有账号？登录"
        android:textSize="12dp" />

</RelativeLayout>